{
  "entryFile": "src/index.ts",
  "controllerPathGlobs": ["src/**/controller/*.controller.ts"],
  "noImplicitAdditionalProperties": "throw-on-extras",
  "spec": {
    "outputDirectory": "dist",
    "specVersion": 3,
    "basePath": "/",
    "securityDefinitions": {
    "jwt": {
      "type": "http",
      "scheme": "bearer",
      "bearerFormat": "JWT"
    }
  }
  },
  "routes": {
    "routesDir": "src/tsoa",
    "middleware": "express",
    "authenticationModule": "./src/auth/middleware/auth.middleware.ts"
  },
  "validation": true,
  "validationOptions": {
    "forbidNonWhitelisted": true,
    "whitelist": true
  }
}
