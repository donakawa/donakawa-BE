generator client {
  provider = "prisma-client-js"
  output = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        BigInt    @id @default(autoincrement())
  email     String    @unique @db.VarChar(100)
  password  String?   @db.VarChar(100)
  nickname  String    @db.VarChar(10)
  goal      String    @db.VarChar(10) @default("")
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamp()
  updatedAt DateTime? @updatedAt @map("updated_at") @db.Timestamp()
  deletedAt DateTime? @map("deleted_at") @db.Timestamp()

  targetBudget    TargetBudget[]
  oauth           Oauth[]
  wishItemFolder  WishItemFolder[]
  addedItemAuto   AddedItemAuto[]
  addedItemManual AddedItemManual[]
  aiChatHeader    AiChatHeader[]

  @@map("user")
}

enum OauthProvider {
  GOOGLE
  KAKAO
}

model Oauth {
  id       BigInt        @id @default(autoincrement())
  userId   BigInt        @map("user_id")
  user     User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  uid      String        @db.VarChar(200)
  provider OauthProvider

  @@unique([provider, uid])   
  @@unique([userId, provider]) 

  @@map("oauth")
}

model TargetBudget {
  id              BigInt    @id @default(autoincrement())
  userId          BigInt    @map("user_id")
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  monthlyIncome   Int?      @map("monthly_income")
  incomeDate      DateTime? @map("income_date")
  incomeDay       Int?       @map("income_day")
  fixedExpense    Int?      @map("fixed_expense")
  monthlySaving   Int?      @map("monthly_saving")
  recommendSaving Int?      @map("recommend_saving")
  spendStrategy   Int?      @map("spend_strategy")
  shoppingBudget  Int?      @map("shopping_budget")

  @@map("target_budget")
}

model WishItemFolder {
  id     BigInt @id @default(autoincrement())
  userId BigInt @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  name   String @db.VarChar(50)

  addedItemAuto   AddedItemAuto[]
  addedItemManual AddedItemManual[]

  @@map("wish_item_folder")
}

enum AddedItemStatus {
  WISHLISTED
  DROPPED
  BOUGHT
}

model AddedItemAuto {
  id             BigInt          @id @default(autoincrement())
  folderId       BigInt?         @map("folder_id")
  wishItemFolder WishItemFolder? @relation(fields: [folderId], references: [id])
  productId      BigInt          @map("product_id")
  product        Product         @relation(fields: [productId], references: [id])
  userId         BigInt          @map("user_id")
  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  status         AddedItemStatus @default(WISHLISTED)
  reason         String          @default("") @db.Text()
  createdAt      DateTime        @default(now()) @db.Timestamp()
  updatedAt      DateTime?       @updatedAt @db.Timestamp()

  purchasedHistory PurchasedHistory[]
  review           Review[]
  aiChatHeaders   AiChatHeader[]

  @@map("added_item_auto")
}

model StorePlatform {
  id        BigInt @id @default(autoincrement())
  name      String @unique @db.VarChar(50)
  urlDomain String @unique @map("url_domain") @db.VarChar(100)
  productUrlTemplate String @db.VarChar(100) @map("product_url_template")

  product Product[]

  @@map("store_platform")
}

model Product {
  id              BigInt        @id @default(autoincrement())
  storePlatformId BigInt        @map("store_platform_id")
  storePlatform   StorePlatform @relation(fields: [storePlatformId], references: [id])
  name            String        @db.VarChar(300)
  price           Int
  files           Files?        @relation(fields: [photoFileId], references: [id])
  photoFileId     BigInt?       @map("photo_file_id") @unique
  productId       String        @db.VarChar(500) @map("product_id")
  updatedAt       DateTime?     @default(now()) @updatedAt @db.Timestamp()

  addedItemAuto AddedItemAuto[]
  @@unique([productId, storePlatformId])
  @@map("product")
}

enum PurchasedAt {
  MORNING
  EVENING
  NIGHT
}

model PurchasedReason {
  id              Int           @id @default(autoincrement())
  reason          String        @db.VarChar(20)

  purchasedHistory PurchasedHistory[]
  @@map("purchased_reason")
}

model PurchasedHistory {
  id              BigInt           @id @default(autoincrement())
  reasonId        Int?             @map("reason_id")
  purchasedReason PurchasedReason? @relation(fields: [reasonId], references: [id])
  reason          String?          @db.VarChar(10)
  autoItemId      BigInt?          @map("auto_item_id")
  addedItemAuto   AddedItemAuto?   @relation(fields: [autoItemId], references: [id], onDelete: Cascade)
  manualItemId    BigInt?          @map("manual_item_id")
  addedItemManual AddedItemManual? @relation(fields: [manualItemId], references: [id], onDelete: Cascade)
  purchasedDate   DateTime         @map("purchased_date")
  purchasedAt     PurchasedAt

  @@map("purchased_history")
}



model AddedItemManual {
  id             BigInt          @id @default(autoincrement())
  folderId       BigInt?         @map("folder_id")
  wishItemFolder WishItemFolder? @relation(fields: [folderId], references: [id])
  userId         BigInt          @map("user_id")
  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  name           String          @db.VarChar(50)
  price          Int
  files          Files?          @relation(fields: [photoFileId], references: [id])
  photoFileId    BigInt?         @map("photo_file_id") @unique
  storePlatform  String          @db.VarChar(50)
  url            String          @db.VarChar(300)
  brand          String          @db.VarChar(50)
  reason         String          @db.VarChar(50)
  status         AddedItemStatus @default(WISHLISTED)
  createdAt      DateTime        @default(now()) @map("created_at") @db.Timestamp()
  updatedAt      DateTime?       @updatedAt @map("updated_at") @db.Timestamp()

  purchasedHistory PurchasedHistory[]
  review           Review[]

  @@map("added_item_manual")
}

model Review {
  id              BigInt           @id @default(autoincrement())
  autoItemId      BigInt?          @map("auto_item_id")
  addedItemAuto   AddedItemAuto?   @relation(fields: [autoItemId], references: [id], onDelete: Cascade)
  manualItemId    BigInt?          @map("manual_item_id")
  addedItemManual AddedItemManual? @relation(fields: [manualItemId], references: [id], onDelete: Cascade)
  satisfaction    Float?
  frequency       Int?
  createdAt       DateTime         @default(now()) @map("created_at") @db.Timestamp()
  updatedAt       DateTime?        @updatedAt @map("updated_at") @db.Timestamp()

  @@map("review")
}

enum Sender {
  AI
  USER
}

model AiChatHeader {
  id              BigInt        @id @default(autoincrement())

  userId          BigInt        @map("user_id")
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  addedItemAutoId BigInt        @map("added_item_auto_id")
  addedItemAuto   AddedItemAuto @relation(fields: [addedItemAutoId], references: [id], onDelete: Cascade)

  title String

  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamp()
  updatedAt DateTime? @updatedAt      @map("updated_at") @db.Timestamp()

  aiChatMessage   AiChatMessage[]
  aiChatSelection AiChatSelection[] @relation("HeaderSelections")
  aiChatResult    AiChatResult?

  @@map("ai_chat_header")
}

model AiChatMessage {
  id           BigInt       @id @default(autoincrement())
  headerId     BigInt       @map("header_id")
  aiChatHeader AiChatHeader @relation(fields: [headerId], references: [id], onDelete: Cascade)
  
  sender       Sender
  content      String       @db.Text()
  createdAt    DateTime     @default(now()) @map("created_at") @db.Timestamp()

  @@map("ai_chat_message")
}

model AiChatSelection {
  id        BigInt @id @default(autoincrement())

  headerId  BigInt @map("header_id")
  header    AiChatHeader @relation("HeaderSelections", fields: [headerId], references: [id], onDelete: Cascade)

  step      Int
  content   String

  @@unique([headerId, step])
  @@map("ai_chat_selection")
}

model AiChatResult {
  id        BigInt           @id @default(autoincrement())
  headerId  BigInt           @unique @map("header_id")
  header    AiChatHeader     @relation(fields: [headerId], references: [id], onDelete: Cascade)

  decision  String
  createdAt DateTime         @default(now()) @map("created_at") @db.Timestamp()

  @@map("ai_chat_result")
}

enum FileType {
  AUTO_ADDED_PRODUCT_PHOTO
  MANUAL_ADDED_PRODUCT_PHOTO
}

model Files {
  id            BigInt        @id @default(autoincrement())
  type          FileType
  name          String        @db.VarChar(300) @unique
  createdAt     DateTime      @db.Timestamp() @default(now()) @map("created_at")

  product Product?
  addedItemManual AddedItemManual?
  @@map("files")
}